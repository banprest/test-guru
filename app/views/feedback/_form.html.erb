<div class="card border-primary">
  <div class="card-body">
    <%= form_with url: feedback_index_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label t('.title') %>
        <%= form.text_field :title, id: :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label t('.text') %>
        <%= form.text_area :text, id: :text, class: 'form-control' %>
      </div>

    <%= form.submit t('.enter'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
