<% if resource.present? && resource.errors.present? %>
	<%= content_tag :div,
                  class: 'resource-errors alert alert-danger',
                  role: 'alert',
                  data: { resource_id: resource.id } do %>
		<h2 class="alert-heading"><%= t('.header', count: resource.errors.count)  %></h2>

		<ul>
			<% resource.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
<% end %>
