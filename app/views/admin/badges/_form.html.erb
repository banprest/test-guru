<div class="row">
  <div class="col col-md-4">  
     <div class="card border-primary">
      <div class="card-body"> 
        <%= form_with model: [:admin, @badge], local: true do |form| %>
          <%= render 'shared/errors', resource: @badge %>
          <div class="form-group">
            <p>
              <%= form.label :title %><br>
              <%= form.text_field :title, id: :badge_title, class: 'form-control'%>
            </p>

            <p>
              <%= form.label :image %><br>
              <%= form.text_field :image, id: :badge_image, class: 'form-control' %>
            </p>
          </div>

          <div class="form-group">
            <% @rules.collect do |rule| %>
                <%= form.label rule[:rule_name] %>
                <%= form.radio_button :rule_name, [rule[:rule_name]] %>
                <% rule[:rule_value].collect do |value| %>
                  <div class="form-check mt-2">
                    <%= form.label value %>
                    <%= form.radio_button :rule_value, value %>
                  </div>
                <% end %>
            <% end %>
          </div>
            <p><%= form.submit class: 'btn btn-primary' %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
